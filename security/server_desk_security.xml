    <record id="server_desk.case_read_rule" model="ir.rule">
        <field name="name">Case规则-读</field>
        <field name="model_id" ref="model_server_desk_case"/>
        <field name="groups" eval="[(4,ref('base.group_server_desk_cds')),(4,ref('base.group_server_desk_tac1')),(4,ref('base.group_server_desk_tac2')),(4,ref('base.group_server_desk_master')),(4,ref('base.group_server_desk_admin')),(4,ref('base.group_server_desk_manager')),(4,ref('base.group_server_desk_product_manager'))]"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
    <record id="server_desk.case_write_rule" model="ir.rule">
        <field name="name">Case规则-修改</field>
        <field name="model_id" ref="model_server_desk_case"/>
        <field name="groups" eval="[(4,ref('base.group_server_desk_cds')),(4,ref('base.group_server_desk_tac1')),(4,ref('base.group_server_desk_partner')),(4,ref('base.group_server_desk_tac2')),(4,ref('base.group_server_desk_master')),(4,ref('base.group_server_desk_manager')),(4,ref('base.group_server_desk_product_manager'))]"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="perm_write" eval="1"/>
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
    <record id="server_desk.case_partner_rule" model="ir.rule">
